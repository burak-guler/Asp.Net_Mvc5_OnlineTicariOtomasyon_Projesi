@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>Ticari Otomasyon Müşteri Bilgi Paneli</h2>

@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post, new { @class = "form-group" }))
{
    <p>
        Mail Adresi: @HttpContext.Current.User.Identity.Name
    </p>

    <p>
        @Html.Label("Ad")
        @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control", style = "width:30%;" })
    </p>
    <p>
        @Html.Label("Soyad")
        @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", style = "width:30%;" })
    </p>
    <p>
        @Html.Label("Şehir")
        @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", style = "width:30%;" })
    </p>
    <p>
        @Html.Label("Mail")
        @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", style = "width:30%;" })
    </p>
    <p>
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control", style = "width:30%;" })
    </p>

    <button class="btn btn-warning">Bilgilerimi Güncelle</button>
}



