@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 style="text-align:center;">Cariler Güncelle</h2>
<br />

@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post, new { @class = "form-group" }))
{
    @Html.HiddenFor(x => x.Cariid)
    @Html.Label("Cari Adı")
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control", style = "width:30%;" })
    @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" })
    <br />
    @Html.Label("Cari Soyadı")
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", style = "width:30%;" })
    @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:red" })
    <br />
    @Html.Label("Cari Şehir")
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", style = "width:30%;" })
    @Html.ValidationMessageFor(x => x.CariSehir, "", new { @style = "color:red" })
    <br />
    @Html.Label("Cari Mail")
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", style = "width:30%;" })
    @Html.ValidationMessageFor(x => x.CariMail, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-warning">Güncelle</button>

}


