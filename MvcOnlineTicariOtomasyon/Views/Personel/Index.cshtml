@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    th, td {
        text-align: center;
    }
</style>
<h2 style="text-align:center;">Departmanlar</h2>
<br />
<table class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Görsel</th>
            <th>Departman</th>
            <th>Güncelle</th>
            <th>Satışlar</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Personelid</td>
                <td>@item.PersonelAd</td>
                <td>@item.PersonelSoyad</td>
                <td> <img src="@item.PersonelGorsel" style="width:80px;"/></td>
                <td>@item.Departman.DepartmanAd</td>
                <td><a href="/Personel/PersonelGetir/@item.Personelid" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Departman/DepartmanPersonelSatis/@item.Personelid" class="btn btn-default" style="background-color:lightcoral; color:white;">Detaylar</a></td>

            </tr>
        }


    </tbody>
</table>
<a href="/Personel/PersonelEKle" class="btn btn-info">Yeni Personel Ekle</a>


