@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2 style="text-align:center;">Departman Detayları</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active" style="font-size:18px; ">Departman Adı: @ViewBag.dgr</li>
</ol>

<table class="table table-hover">
    <thead>
        <tr>
 
            <th>Ad</th>
            <th>Soyad</th>
            <th>Görsel</th>
            <th>Satışlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
              
                <td>@item.PersonelAd</td>
                <td>@item.PersonelSoyad</td>
                <td><img src="@item.PersonelGorsel" width="60" /></td>
                <td><a style="background-color:coral" class="btn btn-default" href="/Departman/DepartmanPersonelSatis/@item.Personelid">Satışlar</a></td>
            </tr>
        }



    </tbody>
</table>
