    @Html.Label("Cari Soyadı")
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", style = "width:30%;" })
    <br />
    @Html.Label("Şehir")
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", style = "width:30%;" })
    <br />
    @Html.Label("Mail")
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", style = "width:30%;" })
    <br />
    @Html.Label("Mail")
    @Html.TextBoxFor(x =>x.CariSifre, new { @class = "form-control", style = "width:30%;" })
