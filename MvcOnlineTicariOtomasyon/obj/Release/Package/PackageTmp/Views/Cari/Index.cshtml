@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2 style="text-align:center;">Müşteriler</h2>
<br />
<table class="table table-striped">
    <thead>
        <tr>

            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
   
                <td>@item.CariAd</td>
                <td>@item.CariSoyad</td>
                <td>@item.CariSehir</td>
                <td>@item.CariMail</td>
                <td><a href="/Cari/CariSil/@item.Cariid" class="btn btn-danger">Sil</a></td>
                <td><a href="/Cari/CariGetir/@item.Cariid" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Cari/MusteriSatis/@item.Cariid" class="btn btn-default" style="background-color:lightcoral; color:white;">Satış Geçmişi</a></td>
                

            </tr>
        }
    </tbody>
</table>

<a href="/Cari/YeniCari" class="btn btn-primary">Yeni Cari Ekle</a>


