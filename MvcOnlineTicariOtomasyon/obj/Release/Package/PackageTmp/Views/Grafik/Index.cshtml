
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>

@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategori ve Ürün sayıları");
    grafik.AddLegend(title: "Değerler");

    grafik.AddSeries(
        name:"Veriler",
        chartType: "doughnut",
        xValue: new[] {"Beyaz Eşya","Televizyon","Bilgisayar","Küçük Ev Aletleri"},
        yValues: new[] {500,250,340,620}
        );
    grafik.Write();
}

